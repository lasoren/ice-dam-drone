<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tberroa.girodicerapp.activities.ActiveInspectionActivity" >

    <include layout="@layout/header"
        android:id="@+id/header"/>

    <TextView
        android:id="@+id/active_mission_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/active_inspection_text"
        android:textSize="24sp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/no_active_mission_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/no_active_inspection_text"
        android:textSize="24sp"
        android:visibility="visible"
        />

    <ProgressBar android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/transfer_phase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/loading_spinner"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/transfer_phase_text"
        android:textSize="24sp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/upload_phase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/loading_spinner"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/upload_phase_text"
        android:textSize="24sp"
        android:visibility="visible"
        />
</RelativeLayout>
