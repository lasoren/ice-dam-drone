<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notification_bar_layout"
    tools:context=".BaseActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inspection_phase_text"
        android:text="@string/inspection_phase_text"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:background="#d3ff7f"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/fetching_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d3ff7f"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fetching_data_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="@string/fetching_data"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            />

        <ProgressBar android:id="@+id/fetching_data_progress_bar"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fetching_data_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>