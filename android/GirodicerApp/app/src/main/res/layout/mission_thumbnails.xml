<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/mission_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/mission_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mission_thumbnail"
        android:layout_alignStart="@+id/mission_thumbnail"
        android:layout_alignEnd="@+id/mission_thumbnail"
        android:text="@string/mission_x"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        />

</RelativeLayout>