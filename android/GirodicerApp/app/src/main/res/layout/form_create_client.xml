<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp">

    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="12"
        android:focusable="true"
        android:hint="@string/first_name"
        android:imeOptions="actionNext"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="12"
        android:focusable="true"
        android:hint="@string/last_name"
        android:imeOptions="actionNext"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="12"
        android:hint="@string/email"
        android:imeOptions="actionGo"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/street_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="12"
        android:focusable="true"
        android:hint="@string/street_address"
        android:imeOptions="actionNext"
        android:inputType="text"/>

    <EditText
        android:id="@+id/city_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/street_address"
        android:layout_below="@id/street_address"
        android:layout_marginBottom="15dp"
        android:ems="8"
        android:focusable="true"
        android:hint="@string/city_town"
        android:imeOptions="actionNext"
        android:inputType="text"/>

    <EditText
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/street_address"
        android:layout_below="@id/street_address"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/city_town"
        android:focusable="true"
        android:hint="@string/state"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="2"/>

    <EditText
        android:id="@+id/zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/city_town"
        android:layout_below="@id/city_town"
        android:ems="5"
        android:focusable="true"
        android:hint="@string/zip_code"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="5"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/zip_code"
        android:layout_alignEnd="@id/state"
        android:layout_alignStart="@id/state"
        android:layout_below="@id/state"
        android:layout_toEndOf="@id/zip_code"
        android:text="@string/submit"/>
</RelativeLayout>